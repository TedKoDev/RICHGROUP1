<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        tools:context=".mainfragment.ChatFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <ImageView-->
<!--                    android:id="@+id/grpback"-->
<!--                    android:layout_width="46dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/back" />-->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유저명 "
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/loginemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그룹넘버"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/grnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/ttt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >






            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarDefaultDelayBeforeFade="10000"
                android:scrollbarFadeDuration = "20"
                android:scrollbarAlwaysDrawVerticalTrack = "true"
                android:scrollbarSize="10dp"
                android:scrollbars="vertical"
                android:scrollbarThumbVertical="@color/purple_700"
                android:id="@+id/chatscroll_view">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatrecy"
                android:scrollbars="vertical"
                android:scrollbarFadeDuration="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#41C5BDBD"

                android:nestedScrollingEnabled="false"/>
            </androidx.core.widget.NestedScrollView>



            </LinearLayout>

        </LinearLayout>
    </FrameLayout>